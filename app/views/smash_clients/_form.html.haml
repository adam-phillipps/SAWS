= form_for @smash_client do |f|
  - if @smash_client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@smash_client.errors.count, "error")} prohibited this smash_client from being saved:"
      %ul
        - @smash_client.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
